<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="450.0" prefWidth="325.0" style="-fx-background-color: white;" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="osadchuk.worktimer.controller.LoginController">
   <children>
      <Pane fx:id="paneMain" prefHeight="450.0" prefWidth="325.0">
         <children>
            <Label layoutX="65.0" layoutY="63.0" text="Please, sign in">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <Label layoutX="70.0" layoutY="97.0" text="your account">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <JFXTextField fx:id="loginTextField" focusColor="#1e86c7" layoutX="52.5" layoutY="155.0" prefHeight="25.0" prefWidth="220.0" promptText="Username" unFocusColor="#194c7a">
               <font>
                  <Font size="15.0" />
               </font></JFXTextField>
            <JFXPasswordField fx:id="passwordTextField" focusColor="#1e86c7" layoutX="52.5" layoutY="200.0" prefHeight="25.0" prefWidth="220.0" promptText="Password" unFocusColor="#194c7a">
               <font>
                  <Font size="15.0" />
               </font></JFXPasswordField>
            <JFXCheckBox fx:id="rememberMeCheckBox" checkedColor="#1e86c7" layoutX="100.0" layoutY="254.0" prefHeight="20.0" text="Remember me" unCheckedColor="#1e86c7">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXCheckBox>
            <Hyperlink fx:id="forgotPasswordLink" alignment="CENTER" contentDisplay="CENTER" layoutX="38.0" layoutY="285.0" onAction="#onClickForgotPassword" prefHeight="24.0" prefWidth="250.0" text="Forgot password?" />
            <JFXButton fx:id="btnSignIn" layoutX="52.5" layoutY="330.0" onAction="#onClickBtnSignIn" prefHeight="30.0" prefWidth="220.0" text="Sign In" />
            <JFXButton fx:id="btnSignUp" layoutX="52.5" layoutY="390.0" onAction="#OnClickBtnSignUp" prefHeight="30.0" prefWidth="220.0" styleClass="button-signup" text="Sign Up" />
            <JFXButton fx:id="btnSettings" layoutX="280.0" layoutY="5.0" onAction="#onClickBtnSettings" prefHeight="30.0" prefWidth="30.0" styleClass="button-settings" text=" " />
            <Label layoutX="221.0" layoutY="11.0" style="-fx-text-fill: grey;" text="Settings">
               <font>
                  <Font size="14.0" />
               </font></Label>
         </children>
      </Pane>
      <Pane fx:id="paneWait" layoutX="37.5" layoutY="190.0" prefHeight="70.0" prefWidth="250.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, grey, 20 ,0, 0, 0);" visible="false">
         <children>
            <Label layoutX="71.0" layoutY="25.0" text="Please, wait...">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <StackPane fx:id="stackPane" layoutX="52.5" layoutY="125.0" prefWidth="220.0" />
   </children>
</AnchorPane>
